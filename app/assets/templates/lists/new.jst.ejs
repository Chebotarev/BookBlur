<div class="row">
  <article class="col-xs-6">
    <h3><%= list.isNew() ? 'New List' : 'Edit List' %></h3>

    <form id="new-list-form">
      <div class="form-group">
        <label for="new-list-title">Title</label><br>
        <input
          id="new-list-title"
          class="form-control"
          type="text"
          name="list[title]"
          value="<%= list.escape('title') %>"
        >
      </div>

      <div class="form-group">
        <label for="new-list-description">Description</label><br>
        <textarea
          id="new-list-description"
          class="form-control"
          name="list[description]"
          rows="5"
        ><%= list.escape('description') %></textarea>
      </div>

      <div class="form-group">
        <label for="new-list-books">Books:</label>
        <div id="new-list-books-container" class="form-control">
          <ul id="new-list-books" class="list-group"></ul>
        </div>
      </div>

      <input
        class="btn btn-primary"
        type="submit"
        value="<%= list.isNew() ? 'Create' : 'Update' %>"
      >
    </form>
  </article>

  <aside id="new-form-search" class="col-xs-6"></aside>
</div>
