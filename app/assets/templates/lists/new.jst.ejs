<div class="row">
  <h3>Create a New List</h3>
  <article class="col-xs-6">
    <form id="new-list-form">
      <div class="form-group">
        <label for="new-list-title">Title</label><br>
        <input id="new-list-title" class="form-control" type="text" name="list[title]">
      </div>

      <div class="form-group">
        <label for="new-list-description">Description</label><br>
        <textarea
          id="new-list-description"
          class="form-control"
          name="list[description]"
          rows="5"
        ></textarea>
      </div>

      <div class="form-group">
        <label for="new-list-books">Books:</label>
        <div id="new-list-books-container" class="form-control">
          <ul id="new-list-books" class="list-group"></ul>
        </div>
      </div>

      <input class="btn btn-primary" type="submit" value="Create List">
    </form>
  </article>

  <aside class="col-xs-6">
    <div id="new-form-search">

    </div>
  </aside>
</div>
