<main class="container">
  <div class="row">
    <div class="col-xs-4"></div>

    <div class="col-xs-4">
      <h1>Create Account</h1>

      <input
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>"
      >
      
      <form action="<%= users_url %>" method="post">
        <div class="form-group">
            <label for="username-field">User Name</label>
            <input
              type="text"
              id="username-field"
              class="form-control"
              name="user[username]"
              value=""
            >
        </div>

        <div class="form-group">
          <label for="email-field">Email</label>
          <input
            type="email"
            id="email-field"
            class="form-control"
            name="user[email]"
            value=""
          >
        </div>

        <div class="form-group">
          <label for="password-field">Password</label>
          <input
            type="password"
            id="password-field"
            class="form-control"
            name="user[password]"
            value=""
          >
        </div>

        <input type="submit" class="btn btn-primary" value="Create Account">
      </form>
    </div>

    <div class="col-xs-4"></div>
  </div>
</main>
